<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container_video_right"
        android:orientation="vertical"
        android:layout_height="wrap_content">


    <TextView
          android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
          android:layout_margin="5dp"
         android:gravity="center"
        android:drawableLeft="@drawable/shape_line"
        android:drawableRight="@drawable/shape_line"
        android:id="@+id/header_video_right"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:text="@string/app_name"
        />


    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:padding="3dp"
                  android:layout_height="wrap_content"
                  android:id="@+id/message_layout_video_right">


        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        android:background="@drawable/shape_bubble_right"
        android:layout_height="wrap_content">


            <com.aziz.sstalk.views.RoundCornerLayout
                    android:layout_width="240dp"
                    app:cornerRadius="35dp"
                    app:topLeftEnabled="true"
                    app:topRightEnabled="true"
                    app:bottomLeftEnabled="true"
                    app:bottomRightEnabled="false"
                    android:id="@+id/video_container_right_card"
                    android:layout_height="210dp"
                    android:background="@drawable/shape_bubble_right"
                    android:orientation="vertical">

                <include layout="@layout/layout_video_bubble"/>

            </com.aziz.sstalk.views.RoundCornerLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:maxWidth="230dp"
                android:autoLink="all"
                android:id="@+id/messageText_video_right"
            android:textColor="@color/white"
            />


    </LinearLayout>




    </LinearLayout>



</LinearLayout>