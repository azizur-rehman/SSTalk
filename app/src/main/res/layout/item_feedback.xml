<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                        app:cardElevation="15dp"
                                        app:cardCornerRadius="4dp"
                                        android:layout_margin="5dp"
                                        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
                app:civ_border_width="0.5dp"
                app:civ_circle_background_color="@color/white"
                app:civ_border_color="@color/white"
                android:layout_width="wrap_content"
                android:id="@+id/delete_feedback_btn"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/ic_cancel_grey_24dp"
                android:layout_gravity="end"
        />



        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
        android:orientation="vertical"
                      android:padding="10dp"
        >

            <TextView android:layout_width="match_parent"
                      android:id="@+id/reportedBy"
                      android:text="Reported by"
                      android:padding="0dp"
                      style="@style/TextViewHeading"
                      android:textColor="@color/gray_dark"
                      android:layout_height="wrap_content"/>


            <TextView android:layout_width="match_parent"
                      android:id="@+id/reportedAt"
                      android:padding="0dp"
                      android:text="Reported at : "
                      style="@style/TextViewHeading"
                      android:textColor="@color/gray_dark"
                      android:layout_height="wrap_content"/>


            <TextView android:layout_width="match_parent"
                      android:id="@+id/reportedByUID"
                      android:text="UID : "
                      android:padding="0dp"
                      style="@style/TextViewHeading"
                      android:textColor="@color/gray_dark"
                      android:layout_height="wrap_content"/>


            <TextView android:layout_width="match_parent"
                      android:id="@+id/report"
                      android:text="Report"
                      android:padding="0dp"
                      android:layout_marginTop="20dp"
                      android:layout_marginBottom="10dp"
                      style="@style/TextViewHeadingLarge"
                      android:textColor="@color/black"
                      android:layout_height="wrap_content"/>




        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>
